      </ImageView>
      <AnchorPane layoutX="162.0" layoutY="121.0" opacity="0.68" prefHeight="302.0" prefWidth="290.0" style="-fx-background-color: black;">
         <children>
            <TextField fx:id="email" layoutX="89.0" layoutY="42.0" />
            <TextField fx:id="password" layoutX="89.0" layoutY="106.0" />
